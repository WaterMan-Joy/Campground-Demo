<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">업체 이름</label>
        <input
          class="form-control"
          type="text"
          placeholder="title"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">이름 가능합니다</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">위치</label>
        <input
          class="form-control"
          type="text"
          placeholder="location"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">위치 가능합니다</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">가격</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            class="form-control"
            type="text"
            name="campground[price]"
            id="price"
            placeholder="원"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">가격 가능합니다</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="formFileMultiple" class="form-label"
          >이미지 파일을 선택하세요</label
        >
        <input
          class="form-control"
          type="file"
          id="formFileMultiple"
          name="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">상세정보</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          cols="40"
          rows="5"
          placeholder="Description"
          required
        ></textarea>
        <div class="valid-feedback">상세정보 가능합니다</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary" type="submit">업로드</button>
      </div>
    </form>
    <a href="/campgrounds">취소</a>
  </div>
</div>
