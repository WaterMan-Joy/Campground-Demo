<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">업체 이름</label>
        <input
          class="form-control"
          type="text"
          placeholder="title"
          name="campground[title]"
          id="title"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">위치</label>
        <input
          class="form-control"
          type="text"
          placeholder="location"
          name="campground[location]"
          id="location"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">가격</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            name="campground[price]"
            id="price"
            placeholder="원"
            aria-describedby="price-label"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">이미지 URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          placeholder="Image URL"
          name="campground[image]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">상세정보</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          cols="40"
          rows="5"
          placeholder="Description"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary" type="submit">업로드</button>
      </div>
    </form>
    <a href="/campgrounds">취소</a>
  </div>
</div>
