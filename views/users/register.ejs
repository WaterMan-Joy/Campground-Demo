<% layout('layouts/boilerplate') %>

<div class="card border-success">
  <div class="card-body">
    <h1 class="card-title text-center">회원가입</h1>
    <form class="needs-validation" novalidate action="/register" method="POST">
      <div class="mb-3">
        <label class="form-label" for="username">사용자 이름</label>
        <input
          class="form-control"
          type="text"
          name="username"
          id="username"
          required
        />
        <div class="valid-feedback">가능합니다</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="email">사용자 이메일</label>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          required
        />
        <div class="valid-feedback">가능합니다</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="password">사용자 비밀번호</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required
        />
        <div class="valid-feedback">가능합니다</div>
      </div>
      <div class="d-grid gap-2">
        <button class="btn btn-success">회원가입</button>
      </div>
    </form>
  </div>
</div>
